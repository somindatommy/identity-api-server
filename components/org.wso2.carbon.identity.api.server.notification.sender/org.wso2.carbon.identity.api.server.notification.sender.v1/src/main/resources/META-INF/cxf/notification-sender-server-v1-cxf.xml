<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean class="org.wso2.carbon.identity.api.server.notification.sender.v1.core.NotificationSenderManagementService"/>
    <bean class="org.wso2.carbon.identity.api.server.notification.sender.v1.impl.NotificationSendersApiServiceImpl"/>
    <bean id="configurationManagerFactoryBean" class="org.wso2.carbon.identity.api.server.notification.sender.common.factory.ConfigurationMgtOSGiServiceFactory"/>
    <bean id="eventPublisherServiceFactoryBean" class="org.wso2.carbon.identity.api.server.notification.sender.common.factory.EventPublisherOSGiServiceFactory"/>
    <bean id="smsProviderPayloadTemplateManagerFactoryBean" class="org.wso2.carbon.identity.api.server.notification.sender.common.factory.SMSProviderPayloadTemplateMgtOSSGiServiceFactory"/>
    <bean id="notificationSenderServiceImplDataHolderBean" class="org.wso2.carbon.identity.api.server.notification.sender.common.NotificationSenderServiceHolder">
        <property name="notificationSenderConfigManager" ref="configurationManagerFactoryBean"/>
        <property name="eventPublisherService" ref="eventPublisherServiceFactoryBean"/>
        <property name="smsProviderPayloadTemplateManager" ref="smsProviderPayloadTemplateManagerFactoryBean"/>
    </bean>
</beans>
